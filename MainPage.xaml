<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mindvault.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="25">
            <Button
                x:Name="PickFileButton"
                Text="Pick a .txt or .pdf File"
                Clicked="OnPickFileClicked" />

            <Label Text="Organized Content:" FontSize="Medium" />

            <Editor 
                x:Name="ContentEditor"
                Placeholder="File content will appear here..."
                HeightRequest="400"
                IsReadOnly="True" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
